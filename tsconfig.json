{
    "compilerOptions": {
        "baseUrl": "./",        
        "sourceMap": true,       
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "esModuleInterop": true,
        "moduleResolution": "node"
    },
    "include": ["src"],
    "exclude": [
        "node_modules"
    ],
    "paths": {
        "src": ["src"]
    }
}